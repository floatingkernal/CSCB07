<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_flight_list_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs.b07.cscb07courseproject.FlightListView">

    <TextView
        android:text="Airline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/flightlistview_icon"
        android:layout_toEndOf="@+id/flightlistview_icon"
        android:id="@+id/flightlistview_airline"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:text="flight Num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/flightlistview_flightnum"
        android:layout_alignBottom="@+id/flightlistview_icon"
        android:layout_toRightOf="@+id/flightlistview_icon"
        android:layout_toEndOf="@+id/flightlistview_icon" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/flighticon"
        android:id="@+id/flightlistview_icon"
        android:maxWidth="64dp"
        android:maxHeight="64dp"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Origin to Destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flightlistview_airline"
        android:layout_toRightOf="@+id/flightlistview_icon"
        android:layout_toEndOf="@+id/flightlistview_icon"
        android:id="@+id/flightlistview_origindestination" />

    <TextView
        android:text="$cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/flightlistview_cost"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Depart Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/flightlistview_departdate"
        android:layout_alignBaseline="@+id/flightlistview_flightnum"
        android:layout_alignBottom="@+id/flightlistview_flightnum"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
