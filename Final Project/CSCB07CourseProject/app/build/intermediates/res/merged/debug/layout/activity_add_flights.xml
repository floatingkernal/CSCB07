<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_flights"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cs.b07.cscb07courseproject.AddFlights">

    <TextView
        android:text="@string/addflight_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/addflight_header"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/addflight_header"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/addflight_scrollview">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/addflight_flightnum"
                android:hint="@string/addflight_flightnum" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/addflight_airline"
                android:hint="@string/addfilght_airline" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/addflight_departdate"
                android:hint="@string/addflight_departdate" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/addflight_arivaldate"
                android:hint="@string/addflight_arivaldate" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/addflight_origin"
                android:hint="@string/addflight_origin" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/addflight_destination"
                android:hint="@string/addflight_destination" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/addflight_cost"
                android:hint="@string/addflight_cost" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/addflight_numseats"
                android:hint="@string/addflight_numseats" />

            <Button
                android:text="@string/addflight_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addflight_btn"
                android:onClick="addNewFlight" />

            <TextView
                android:text="@string/addflight_fromfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addflight_fromfile_txtview"
                android:textAppearance="@android:style/TextAppearance" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/addflight_path"
                android:hint="@string/addflight_path" />

            <Button
                android:text="@string/addflight_filebtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addflight_filebtn"
                android:onClick="addFlightFromFile" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
